{
    "compilerOptions": {
        "lib": ["es2023"],
        "module": "ESNext",
        "target": "es2022",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "bundler",
        "outDir": "./dist",
        "jsx": "react-jsx",
        "jsxImportSource": "./lib/modules/JSX",
        "useDefineForClassFields": true,
        "experimentalDecorators": false,
        "emitDecoratorMetadata": false
    },
    "include": [
        "lib/**/*.ts",
        "lib/*.ts"
    ]
}
